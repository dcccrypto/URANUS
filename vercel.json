{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "SOLANA_TRACKER_API_KEY": "@solana_tracker_api_key",
    "CONTRACT_ADDRESS": "@contract_address"
  },
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 30
    }
  }
} 